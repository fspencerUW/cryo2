FoamFile
{
    format      ascii;
    class       volScalarField;
    location    "0";
    object      epsilon;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [0 2 -3 0 0 0 0];   // m²/s³

internalField   uniform 1e-8;       // Small initial dissipation rate

boundaryField
{
    inlet
    {
        type            fixedValue;
        value           uniform 1e-8;
    }

    outlet
    {
        type            zeroGradient;
    }

    walls
    {
        type            epsilonWallFunction;
        value           uniform 1e-8;
    }
}

