FoamFile
{
    format      ascii;
    class       volScalarField;
    location    "0";
    object      omega;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [0 0 -1 0 0 0 0];  // s⁻¹

internalField    uniform 0.00001;        // Initial guess for omega

boundaryField
{
    inlet
    {
        type            fixedValue;
        value           uniform 0.00001;
    }

    outlet
    {
        type            zeroGradient;
    }

    walls
    {
        //type            omegaWallFunction;
        //value           uniform 0.00001;
        type            fixedValue;
        value           uniform 0.00001;
    }
}




